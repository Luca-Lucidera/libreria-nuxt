generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model BookType {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String  @unique
  books Books[]
}

model Editor {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String  @unique
  books Books[]
}

model Books {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  buy          Int
  read         Int
  bookTypeId   String     @db.ObjectId
  statusBookId String     @db.ObjectId
  editorId     String     @db.ObjectId
  price        Float
  rating       Float
  comments     String
  userId       String     @db.ObjectId
  user         Users      @relation(fields: [userId], references: [id])
  bookType     BookType   @relation(fields: [bookTypeId], references: [id])
  statusBook   StatusBook @relation(fields: [statusBookId], references: [id])
  editor       Editor     @relation(fields: [editorId], references: [id])
}

model StatusBook {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique
  statusBooks Books[]
}

model TableHeaders {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  lastName String
  email    String  @unique
  password String
  jwt      String  @unique
  books    Books[]
}
